

<MenuWidget>:
    canvas.before:
        Color:
            rgba: 0, 0, 0, .8
        Rectangle:
            size: self.size
    Label:
        font_size: dp(60)
        text: root.parent.menu_title
        pos_hint: {"center_x": .5, "center_y": .6}
    Button:
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1
            Line:
                width: 2
                rectangle: self.x, self.y, self.width, self.height
        font_size: dp(30)
        text: root.parent.start_button_title
        pos_hint: {"center_x": .5, "center_y": .3}
        size_hint: .2, .15
        background_normal: ''
        background_color: 0, 0, 0, 1
        on_press: root.parent.on_start_button_pressed()
